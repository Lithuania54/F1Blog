@page
@model F1.Web.Pages.Rankings.IndexModel
@{
  Layout = "~/Pages/Shared/_Layout.cshtml";
  ViewData["Title"] = "2025 Rankings";
}

<div class="container py-5" style="min-height:70vh">
  <h1 class="mb-4">2025 Rankings</h1>

  <div class="row g-4">
    <div class="col-12 col-lg-5">
      <div class="card bg-black text-light border-secondary h-100">
        <div class="card-header border-secondary"><strong>Teams</strong></div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle mb-0">
              <thead>
                <tr>
                  <th style="width:70px">Pos</th>
                  <th>Team</th>
                  <th class="text-end">Points</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var t in Model.TeamStandings)
                {
                  <tr>
                    <td>@t.Position</td>
                    <td>@t.Team</td>
                    <td class="text-end">@t.Points</td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-7">
      <div class="card bg-black text-light border-secondary h-100">
        <div class="card-header border-secondary"><strong>Drivers</strong></div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle mb-0">
              <thead>
                <tr>
                  <th style="width:70px">Pos</th>
                  <th>Driver</th>
                  <th>Team</th>
                  <th class="text-end">Points</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var d in Model.DriverStandings)
                {
                  <tr>
                    <td>@d.Position</td>
                    <td>@d.Driver</td>
                    <td>@d.Team</td>
                    <td class="text-end">@d.Points</td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
