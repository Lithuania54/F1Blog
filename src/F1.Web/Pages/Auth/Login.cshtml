@page
@model F1.Web.Pages.Auth.LoginModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Log in";
}

<section class="g-auth">
  <div class="g-auth__grid">
    <div class="g-auth__copy">
      <div class="g-hero__eyebrow">Garage access</div>
      <h1 class="g-hero__title">Log back in</h1>
      <p class="g-hero__text">Pick up where you left off with saved posts, predictions, and race-weekend alerts.</p>
      <div class="g-pill-row">
        <span class="g-tag">Sync across devices</span>
        <span class="g-tag">Follow teams</span>
        <span class="g-tag">Write &amp; comment</span>
      </div>
    </div>

    <div class="g-form-card">
      <div class="g-form-card__header">
        <div class="g-card__title">Log in</div>
        <div class="g-card__muted">Use the email and password you registered with.</div>
      </div>

      <form method="post" novalidate class="g-form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="g-field">
          <label asp-for="Input.Email" class="form-label">Email</label>
          <input asp-for="Input.Email" class="form-control" autocomplete="username" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="g-field">
          <label asp-for="Input.Password" class="form-label">Password</label>
          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check">
          <input asp-for="Input.RememberMe" class="form-check-input" />
          <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="g-btn g-btn-accent g-btn-block">Log in</button>
      </form>
    </div>
  </div>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
