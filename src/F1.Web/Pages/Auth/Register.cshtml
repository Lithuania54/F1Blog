@page
@model F1.Web.Pages.Auth.RegisterModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create account";
}

<section class="g-auth">
  <div class="g-auth__grid">
    <div class="g-auth__copy">
      <div class="g-hero__eyebrow">Join the grid</div>
      <h1 class="g-hero__title">Create your garage profile</h1>
      <p class="g-hero__text">Save predictions, draft blog posts, and follow your favorite teams in one place.</p>
      <div class="g-pill-row">
        <span class="g-tag">Post &amp; edit blogs</span>
        <span class="g-tag">Weekend reminders</span>
        <span class="g-tag">Race notes sync</span>
      </div>
    </div>

    <div class="g-form-card">
      <div class="g-form-card__header">
        <div class="g-card__title">Create account</div>
        <div class="g-card__muted">A few quick fields and you're ready to race.</div>
      </div>

      <form method="post" novalidate class="g-form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="g-field">
          <label asp-for="Input.Email" class="form-label">Email</label>
          <input asp-for="Input.Email" class="form-control" autocomplete="username" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="g-field">
          <label asp-for="Input.Password" class="form-label">Password</label>
          <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="g-field">
          <label asp-for="Input.ConfirmPassword" class="form-label">Confirm password</label>
          <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="g-btn g-btn-accent g-btn-block">Create account</button>
      </form>
    </div>
  </div>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
