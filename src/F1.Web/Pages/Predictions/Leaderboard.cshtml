@page
@model F1.Web.Pages.Predictions.LeaderboardModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Predictions Leaderboard";
}

<section class="g-container g-section">
  <div class="g-hero__shell g-hero__shell--compact">
    <div class="g-hero__copy">
      <div class="g-hero__eyebrow">Predictions</div>
      <h1 class="g-hero__title">Season leaderboard</h1>
      <p class="g-hero__text">Points, podium accuracy, and hot streaks. Badges awarded automatically for accuracy.</p>
    </div>
  </div>

  <div class="lb-group">
    <div class="lb-header">
      <h2>Top predictors</h2>
      <span class="g-card__muted">Streak counts consecutive scored races.</span>
    </div>
    <div class="table-responsive">
      <table class="g-table">
        <thead>
          <tr>
            <th>#</th>
            <th>User</th>
            <th>Points</th>
            <th>Correct podiums</th>
            <th>Streak</th>
            <th>Badge</th>
          </tr>
        </thead>
        <tbody>
          @for (int i = 0; i < Model.Entries.Count; i++)
          {
            var e = Model.Entries[i];
            <tr>
              <td>@(i+1)</td>
              <td>@e.UserName</td>
              <td>@e.Points</td>
              <td>@e.CorrectPodiums</td>
              <td>@e.Streak</td>
              <td>@e.Badge</td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</section>
