@page
@model F1.Web.Pages.Blogs.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container py-5 mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Blogs</h1>
    <form method="get" class="mb-0">
      <button name="shuffle" value="1" class="btn btn-sm btn-primary">Shuffle</button>
    </form>
  </div>

  <div class="row g-4">
    @foreach(var p in Model.Posts)
    {
      <div class="col-12 col-md-6">
        <div class="card bg-dark text-white blog-card">
          <img src="@((!string.IsNullOrEmpty(p.ImageUrl))?p.ImageUrl:"/images/1.avif")" class="card-img-top" alt="@p.Title" loading="lazy" />
          <div class="card-body">
            <h5 class="card-title">@p.Title</h5>
            <p class="card-text small text-muted">@p.Date.ToString("yyyy-MM-dd")</p>
            <p class="card-text">@p.Excerpt</p>
            <a asp-page="/Blogs/Details" asp-route-slug="@p.Slug" class="btn btn-sm btn-outline-light">Read more</a>
          </div>
        </div>
      </div>
    }
  </div>

  <div class="mt-4">
    @if(Model.HasMore)
    {
      <a asp-page="/Blogs/Index" asp-route-pageNumber="@Model.PageNumber + 1" class="btn btn-sm btn-secondary">Next</a>
    }
  </div>
</div>
