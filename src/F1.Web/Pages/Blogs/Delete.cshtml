@page "{id:int}"
@model F1.Web.Pages.Blogs.DeleteModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Blog";
}

<div class="container py-5">
  <h3>Delete post</h3>
  <div class="card p-3 mb-3">
    <h4>@Model.Post?.Title</h4>
    <p class="text-muted">@Model.Post?.CreatedAt.ToLocalTime()</p>
    <p>@(Model.Post?.Content?.Length > 300 ? Model.Post.Content.Substring(0,300) + "â€¦" : Model.Post?.Content)</p>
  </div>

  <form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Blogs/Index" class="btn btn-outline-light">Cancel</a>
  </form>
</div>
