@page
@model F1.Web.Pages.Races.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-6">Races</h1>
  <div class="grid gap-4">
    @foreach(var r in Model.Races)
    {
      <div class="p-4 bg-neutral-900 rounded flex justify-between items-center">
        <div>
          <div class="text-sm text-gray-400">@r.Date.ToString("MMM dd, yyyy")</div>
          <div class="font-semibold">@r.Name</div>
          <div class="text-sm text-gray-300">@r.Location</div>
        </div>
        <div class="flex flex-col items-end gap-2">
          <a class="text-[var(--accent)]" target="_blank" rel="noopener" href="@r.MapUrl">View on Map</a>
        </div>
      </div>
    }
  </div>
</div>
