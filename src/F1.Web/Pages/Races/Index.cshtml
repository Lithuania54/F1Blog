@page
@model F1.Web.Pages.Races.IndexModel
@{
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container py-3 mt-3">
  <h1 class="h4 mb-3">Races</h1>
  @if(Model.TrackImageUrls.Any())
  {
    <div id="tracksSwiper" class="swiper tracks-swiper" data-tracks='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TrackImageUrls))'>
      <div class="swiper-wrapper">
        @for(int i=0;i<Model.TrackImageUrls.Count;i++)
        {
          var img = Model.TrackImageUrls[i];
          var race = i < Model.Races.Count ? Model.Races[i] : null;
          <div class="swiper-slide">
            <img src="@img" alt="Track @i" loading="lazy" />
            <div class="position-absolute bottom-0 start-0 p-3 text-white">
              <h5 class="mb-1">@((race!=null)?race.Name:"Upcoming Race")</h5>
              <div class="small">@((race!=null)?race.Location:"Location") - @((race!=null)?race.Date.ToString("yyyy-MM-dd"):"")</div>
              <div class="mt-2"><a class="btn btn-sm btn-outline-light" href="#">View details (coming soon)</a></div>
            </div>
          </div>
        }
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  }
  else
  {
    <div class="alert alert-warning">No track images found. Add image files (PNG/AVIF/JPG/WEBP) to <code>src/F1.Web/wwwroot/images2/</code> or <code>src/F1.Web/images2/</code> to enable the tracks carousel.</div>
  }
</div>

<section class="g-section">
  <div class="g-container">
    <div class="g-card">
      <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
        <div>
          <div class="g-hero__eyebrow">New â€¢ Interactive</div>
          <h2 class="g-hero__title" style="font-size: clamp(1.6rem, 3vw, 2.2rem); margin: 8px 0 6px;">Race-weekend dashboard</h2>
          <p class="g-card__muted mb-3">Track every stint live, see tire-wear projections, and overlay evolving weather to plan strategy in real time.</p>
          <div class="g-pill-row">
            <span class="g-tag">Live stint tracker</span>
            <span class="g-tag">Tyre deg curves</span>
            <span class="g-tag">Weather radar overlay</span>
          </div>
        </div>
        <div class="d-flex flex-column gap-2">
          <a class="g-btn g-btn-accent" href="#">Open dashboard (beta)</a>
          <span class="g-card__muted">Optimized for tablet/desktop. Mobile view coming soon.</span>
        </div>
      </div>
    </div>
  </div>
</section>
