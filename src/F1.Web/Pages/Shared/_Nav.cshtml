@* Pages/Shared/_Nav.cshtml *@
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Current normalized path (lowercase, no trailing slash)
    var path = HttpContextAccessor?.HttpContext?.Request?.Path.Value?.TrimEnd('/')?.ToLowerInvariant() ?? "/";
    bool IsActivePrefix(string p) => path.StartsWith(p.TrimEnd('/').ToLowerInvariant());
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" role="navigation" aria-label="Main navigation">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" href="/">Drive the Story</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link @(IsActivePrefix("/races") ? "active" : "")" href="/Races">Races</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(IsActivePrefix("/standings") ? "active" : "")" href="/Standings">Standings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(IsActivePrefix("/blogs") ? "active" : "")" href="/Blogs">Blogs</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
