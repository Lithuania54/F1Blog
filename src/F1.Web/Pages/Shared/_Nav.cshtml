@using Microsoft.AspNetCore.Identity
@using F1.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Normalized path (lowercase, no trailing slash)
    var path = HttpContextAccessor?.HttpContext?.Request?.Path.Value?.TrimEnd('/')?.ToLowerInvariant() ?? "/";
    bool IsActivePrefix(string p) => path.StartsWith(p.TrimEnd('/').ToLowerInvariant());
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" role="navigation" aria-label="Main navigation">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" asp-page="/Index">Drive the Story</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link @(IsActivePrefix("/races") ? "active" : "")" asp-page="/Races/Index">Races</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(IsActivePrefix("/standings") ? "active" : "")" asp-page="/Standings/Index">Standings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(IsActivePrefix("/blogs") ? "active" : "")" asp-page="/Blogs/Index">Blogs</a>
        </li>

        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
              <a class="nav-link @(IsActivePrefix("/blogs/create") ? "active" : "")" asp-page="/Blogs/Create">Write Blog</a>
            </li>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity?.Name
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                  <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a>
                </li>
                <li>
                  <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                    <button type="submit" class="dropdown-item">Logout</button>
                  </form>
                </li>
              </ul>
            </li>
        }
        else
        {
            <li class="nav-item">
              <a class="nav-link @(IsActivePrefix("/auth/login") ? "active" : "")" asp-page="/Auth/Login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link @(IsActivePrefix("/auth/register") ? "active" : "")" asp-page="/Auth/Register">Register</a>
            </li>
        }
      </ul>
    </div>
  </div>
</nav>
