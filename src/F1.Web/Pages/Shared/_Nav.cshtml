@using Microsoft.AspNetCore.Mvc.Routing
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var current = HttpContextAccessor?.HttpContext?.Request?.Path.Value?.ToLowerInvariant() ?? "/";
    Func<string,bool> active = p => current.StartsWith(p.ToLowerInvariant());
}

@* Bootstrap 5 navbar: Brand on left, links on right. Uses collapse for mobile. *@
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" aria-label="Main navigation">
  <div class="container-fluid">
    <a class="navbar-brand" asp-page="/Index">Drive the Story</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link @(active("/standings")?"active":"")" aria-current="@(active("/standings")?"page":null)" asp-page="/Standings/Index">Standings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(active("/races")?"active":"")" aria-current="@(active("/races")?"page":null)" asp-page="/Races/Index">Races</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(active("/blogs")?"active":"")" aria-current="@(active("/blogs")?"page":null)" asp-page="/Blogs/Index">Blogs</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

