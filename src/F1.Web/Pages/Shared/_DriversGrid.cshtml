@model IEnumerable<F1.Web.Models.Driver>
<section id="drivers" class="py-16">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">Drivers & Teams</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      @foreach(var d in Model)
      {
        <article class="bg-neutral-900 p-4 rounded-lg hover:shadow-lg">
          <img loading="lazy" src="@d.PhotoUrl" alt="@d.Name" class="w-full h-40 object-cover rounded" />
          <h3 class="mt-3 font-semibold">@d.Name</h3>
          <p class="text-sm text-gray-300">@d.Team</p>
          <p class="mt-2 text-sm text-gray-400">@d.Bio</p>
          <div class="mt-3 flex gap-4 text-sm text-gray-300">
            <div><strong class="text-white">@d.Wins</strong> Wins</div>
            <div><strong class="text-white">@d.Podiums</strong> Podiums</div>
          </div>
        </article>
      }
    </div>
  </div>
</section>
