@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en" class="antialiased">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - F1</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Manrope:wght@500;600;700&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

  @RenderSection("Head", required: false)
  @RenderSection("Styles", required: false)
</head>
<body class="g-body">
  @await Html.PartialAsync("~/Pages/Shared/_Nav.cshtml")

  <main role="main" class="g-main" id="mainContent">
    @RenderBody()
  </main>

  <footer class="g-footer">
    <div class="g-footer__inner">
      <div>
      <div class="g-footer__brand">F1 Garage</div>
      <p class="g-footer__text">Stories, stats, and strategy for every Grand Prix weekend.</p>
    </div>
    <div class="g-footer__links">
      <a asp-page="/Blogs/Index">Blog</a>
      <a asp-page="/Races/Index">Race Weekends</a>
      <a asp-page="/Standings/Index">Standings</a>
    </div>
  </div>
</footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" defer></script>
  <script src="~/js/nav.js" defer></script>
  <script src="~/js/carousel-init.js" defer></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
