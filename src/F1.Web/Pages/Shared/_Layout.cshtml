@namespace F1.Web.Pages.Shared
<!DOCTYPE html>
<html lang="en" class="antialiased">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Drive the Story — Formula One insights, race reports & team analytics." />
  <link rel="canonical" href="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" />
  <meta property="og:title" content="Drive the Story — Formula One" />
  <meta property="og:description" content="Race reports, driver profiles and team analytics." />
  <title>Drive the Story — Formula One</title>
  <!-- Bootstrap 5 (CDN) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Swiper CSS (CDN) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
  <link rel="stylesheet" href="/css/site.css" />
  @RenderSection("Head", required: false)
</head>
<body class="bg-[#0b0b0d] text-gray-200 selection:bg-red-600 selection:text-white">
  <partial name="_Nav" />
  <main role="main">
    @RenderBody()
  </main>

  <!-- Bootstrap JS (bundle with Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" defer></script>
  <script src="/js/nav.js" defer></script>
  <script src="/js/carousel-init.js" defer></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
