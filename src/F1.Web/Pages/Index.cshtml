@page
@model F1.Web.Pages.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<meta name="next-race" content="@Model.NextRace?.Date.ToString("o")" />

<partial name="_Hero" />

<section id="services" class="py-12">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">What we do</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-neutral-900 p-6 rounded">
        <h3 class="font-semibold">Race Reports</h3>
        <p class="text-sm text-gray-300">Fast, tactical reports focused on the decisive moments.</p>
      </div>
      <div class="bg-neutral-900 p-6 rounded">
        <h3 class="font-semibold">Team Analytics</h3>
        <p class="text-sm text-gray-300">Telemetry-driven insights and pit stop breakdowns.</p>
      </div>
      <div class="bg-neutral-900 p-6 rounded">
        <h3 class="font-semibold">Driver Profiles</h3>
        <p class="text-sm text-gray-300">In-depth profiles covering strengths, style and stats.</p>
      </div>
    </div>
  </div>
</section>

<section id="works" class="py-12">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">Works</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      @foreach(var w in Model.Works)
      {
        <partial name="_CaseStudy" model="w" />
      }
    </div>
  </div>
</section>

<partial name="_DriversGrid" model="Model.Drivers" />

<partial name="_RaceCalendar" model="Model.Races" />

<section id="insights" class="py-12">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">Latest insights</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      @foreach(var p in Model.Posts)
      {
        <article class="bg-neutral-900 p-6 rounded">
          <h3 class="font-semibold">@p.Title</h3>
          <div class="prose max-w-none text-gray-300">@Html.Raw(p.Html)</div>
        </article>
      }
    </div>
  </div>
</section>

<section id="newsletter" class="py-12 bg-black/20">
  <div class="max-w-3xl mx-auto px-4">
    <h3 class="text-xl font-bold">Subscribe</h3>
    <form id="newsletterForm" method="post" action="/Api/Subscribe">
      <div class="mt-3 flex gap-2">
        <input required type="email" name="email" placeholder="you@email.com" class="w-full p-3 bg-neutral-900 rounded" />
        <button class="px-4 bg-[var(--accent)] text-black rounded">Join</button>
      </div>
    </form>
  </div>
</section>

<section id="contact" class="py-12">
  <div class="max-w-3xl mx-auto px-4">
    <h3 class="text-xl font-bold">Contact</h3>
    <form id="contactForm" method="post" action="/Api/Contact">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-3">
        <input required name="name" placeholder="Your name" class="p-3 bg-neutral-900 rounded" />
        <input required type="email" name="email" placeholder="Email" class="p-3 bg-neutral-900 rounded" />
      </div>
      <textarea required name="message" placeholder="Message" class="w-full mt-3 p-3 bg-neutral-900 rounded"></textarea>
      <div class="mt-3"><button class="px-4 py-2 bg-[var(--accent)] text-black rounded">Send</button></div>
    </form>
  </div>
</section>
