@page
@model F1.Web.Pages.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<section class="g-hero g-hero--home">
  <div class="g-hero__shell">
    <div class="g-hero__copy">
      <div class="g-hero__eyebrow">Season hub</div>
      <h1 class="g-hero__title">All the pace, strategy, and stories from every F1 weekend.</h1>
      <p class="g-hero__text">
        Follow race schedules, standings, strategy breakdowns, and long-form posts in one cohesive, premium experience.
      </p>
      <div class="g-cta-row">
        <a class="g-btn g-btn-accent" asp-page="/Blogs/Index">Read the blog</a>
        <a class="g-btn g-btn-ghost" asp-page="/Standings/Index">View standings</a>
      </div>
    </div>

    <div class="g-carousel-shell">
      @if (Model.CarouselImageUrls.Any())
      {
        <div id="f1Swiper" class="swiper g-carousel" data-images='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CarouselImageUrls))'>
          <div class="swiper-wrapper">
            @for (int i = 0; i < Model.CarouselImageUrls.Count; i++)
            {
              var url = Model.CarouselImageUrls[i];
              <div class="swiper-slide">
                <img src="@url" alt="F1 car #@(i + 1)" />
              </div>
            }
          </div>
          <div class="swiper-pagination"></div>
          <div class="swiper-button-prev" aria-label="Previous slide"></div>
          <div class="swiper-button-next" aria-label="Next slide"></div>
        </div>
      }
      else
      {
        <div class="g-panel g-text-muted">@Model.CarouselNotFoundMessage</div>
      }
    </div>
  </div>
</section>
