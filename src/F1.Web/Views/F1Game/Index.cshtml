@{
    ViewData["Title"] = "F1 Game";
}

<section class="container py-4">
  <div class="d-flex align-items-center gap-3 mb-3">
    <div>
      <h1 class="mb-1">F1 Game</h1>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-lg-8">
      <div class="f1-viewport shadow-sm">
        <canvas id="f1game-canvas"></canvas>
        <div id="race-countdown" class="race-countdown d-none">3</div>
        <div class="f1-hud card card-body p-3">
          <div class="d-flex gap-3 flex-wrap">
            <div>
              <div class="hud-label small">Speed</div>
              <div class="fs-5 hud-value"><span id="hud-speed">0</span> km/h</div>
            </div>
            <div>
              <div class="hud-label small">Lap</div>
              <div class="fs-5 hud-value" id="hud-lap">1/2</div>
            </div>
            <div>
              <div class="hud-label small">Lap Time</div>
              <div class="fs-5 hud-value" id="hud-lap-time">0.000</div>
            </div>
            <div>
              <div class="hud-label small">Best</div>
              <div class="fs-5 hud-value" id="hud-best">-</div>
            </div>
          </div>
          <div class="mt-2 fw-semibold text-accent" id="hud-status">Ready</div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow-sm mb-3">
        <div class="card-body">
          <h5 class="card-title mb-3">Session</h5>

          <div class="mb-3">
            <div class="text-muted small mb-1">Mode</div>
            <div class="d-flex gap-3">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="f1game-mode" id="mode-time" value="time" checked>
                <label class="form-check-label" for="mode-time">Time Trial</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="f1game-mode" id="mode-race" value="race">
                <label class="form-check-label" for="mode-race">Race</label>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label text-muted small">Circuit</label>
            <select id="f1game-circuit" class="form-select">
              <option value="china_circuit">China</option>
              <option value="poland_circuit">Poland</option>
              <option value="mexico_circuit">Mexico</option>
              <option value="bahrain_circuit">Bahrain</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label text-muted small" for="f1game-laps">Laps</label>
            <select id="f1game-laps" class="form-select">
              @for (var i = 1; i <= 6; i++)
              {
                <option value="@i" selected="@(i == 3 ? "selected" : null)">@i</option>
              }
            </select>
          </div>

          <div class="mb-3">
            <div class="text-muted small mb-1">Car</div>
            <div class="d-flex gap-2 flex-wrap">
              <button type="button" class="btn btn-outline-secondary btn-sm active" data-f1-car="red">Red</button>
              <button type="button" class="btn btn-outline-secondary btn-sm" data-f1-car="green">Green</button>
              <button type="button" class="btn btn-outline-secondary btn-sm" data-f1-car="orange">Orange</button>
              <button type="button" class="btn btn-outline-secondary btn-sm" data-f1-car="white">White</button>
            </div>
          </div>

          <div class="d-flex gap-2">
            <button id="f1game-start" class="btn btn-primary">Start</button>
            <button id="f1game-restart" class="btn btn-outline-secondary">Restart</button>
          </div>
        </div>
      </div>

      <div class="card shadow-sm mb-3">
        <div class="card-body">
          <h5 class="card-title mb-3">Race Order</h5>
          <ul id="f1-positions" class="list-unstyled mb-0 small"></ul>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Controls</h5>
          <div class="d-flex flex-column gap-2 small text-muted">
            <div class="d-flex align-items-center gap-2"><span class="f1-control-badge">W / Up</span><span>Accelerate</span></div>
            <div class="d-flex align-items-center gap-2"><span class="f1-control-badge">S / Down</span><span>Brake / Reverse</span></div>
            <div class="d-flex align-items-center gap-2"><span class="f1-control-badge">A / Left</span><span>Steer Left</span></div>
            <div class="d-flex align-items-center gap-2"><span class="f1-control-badge">D / Right</span><span>Steer Right</span></div>
          </div>
        </div>
      </div>
      </div>
      </div>
    </div>
  </div>
</section>

@section Styles {
  <style>
    .f1-viewport {
      position: relative;
      background: linear-gradient(135deg, #0c0f1a, #0b1c2c 60%, #0f2436);
      border-radius: 14px;
      overflow: hidden;
      min-height: 640px;
      height: clamp(560px, 70vh, 920px);
    }

    .f1-viewport canvas {
      width: 100%;
      height: 100%;
      display: block;
      aspect-ratio: 16 / 9;
      min-height: 560px;
    }

    .f1-hud {
      position: absolute;
      top: 12px;
      left: 12px;
      background: rgba(10, 12, 20, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.14);
      color: #f5f7ff;
      backdrop-filter: blur(8px);
      max-width: 460px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
    }

    .hud-label {
      color: #dbe7ff;
      letter-spacing: 0.05em;
      font-weight: 700;
      text-transform: uppercase;
      opacity: 0.92;
    }

    .hud-value {
      color: #b8f4ff;
      font-weight: 800;
      text-shadow: 0 0 14px rgba(184, 244, 255, 0.22);
    }

    .text-accent {
      color: #ff9f6e;
    }

    .f1-control-badge {
      display: inline-block;
      min-width: 70px;
      padding: 2px 6px;
      background: #f4f4f5;
      border-radius: 4px;
      margin-right: 6px;
      color: #111;
      font-weight: 600;
    }

    @@media (max-width: 768px) {
      .f1-viewport {
        height: 420px;
        min-height: 420px;
      }

      .f1-viewport canvas {
        min-height: 320px;
      }
    }

    .race-countdown {
      position: absolute;
      inset: 0;
      display: grid;
      place-items: center;
      font-size: clamp(3rem, 8vw, 6rem);
      font-weight: 800;
      color: #fefefe;
      text-shadow: 0 18px 40px rgba(0, 0, 0, 0.5);
      pointer-events: none;
      background: radial-gradient(circle at 50% 40%, rgba(15, 23, 42, 0.32), rgba(8, 13, 24, 0.72));
      transition: opacity 0.25s ease, transform 0.25s ease;
    }

    .race-countdown.is-go {
      color: #6ef59a;
    }

    .race-countdown.d-none {
      opacity: 0;
      transform: scale(0.94);
    }
  </style>
}

@section Scripts {
  <script src="https://cdn.jsdelivr.net/npm/three@0.160.0/build/three.min.js" crossorigin="anonymous"></script>
  <script src="~/js/f1trackData.js" asp-append-version="true"></script>
  <script src="~/js/f1game3d.js" asp-append-version="true"></script>
  <script>
    window.f1Game3D = window.F1Game3D.init({
      canvas: document.getElementById("f1game-canvas"),
      modeInputs: document.querySelectorAll('input[name="f1game-mode"]'),
      circuitSelect: document.getElementById("f1game-circuit"),
      lapSelect: document.getElementById("f1game-laps"),
      carButtons: document.querySelectorAll("[data-f1-car]"),
      startButton: document.getElementById("f1game-start"),
      restartButton: document.getElementById("f1game-restart"),
      countdownEl: document.getElementById("race-countdown"),
      hud: {
        speed: document.getElementById("hud-speed"),
        lap: document.getElementById("hud-lap"),
        lapTime: document.getElementById("hud-lap-time"),
        best: document.getElementById("hud-best"),
        status: document.getElementById("hud-status")
      },
      leaderboard: document.getElementById("f1-positions")
    });
  </script>
}
